<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="initial-scale=1">
  <%= blog_meta_description(current_page.data.description) %>
  <title><%= blog_title(current_page.data.title) %></title>
  <%= javascript_include_tag 'jquery-2.1.0.js' %>
  <%= stylesheet_link_tag 'youstrap-m.min.css', 'mono' %>
  <link rel="alternate" type="application/rss+xml" title="RSS" href="http://youcune.com/mono/feed.xml">
  <link rel="author" href="http://google.me/+YuNakanishi">
  <link rel="icon" type="image/png" href="/images/favicon.png">
  <link rel="apple-touch-icon" type="image/png" href="/images/apple-touch-icon.png">
</head>
<body>
<header>
  <div><a href="/mono/"><img src="/images/mono/mono.jpg" alt="Monolog" id="monologo" class="img-responsive" width="1024" height="256"></a></div>
</header>
<div id="body" class="row">
  <div id="main-column" class="col-xs-12 col-md-8">
    <%= yield %>
  </div>
  <div id="sub-column" class="col-xs-12 col-md-4">
    <aside id="author">
      <h2>Author</h2>
      <img src="http://www.gravatar.com/avatar/bda36e025600f9e5a400dea0a1f08db1" alt="" width="80" height="80" class="pull-right">
      <%= partial 'partials/profile' %>
    </aside>
    <aside id="latest-posts">
      <h2>Latest Posts</h2>
      <ul>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= format_date article.date %></span></li>
        <% end %>
      </ul>
    </aside>
    <aside id="tag-cloud">
      <h2>Tag Cloud</h2>
      <ul>
        <%
          max_count = (blog.tags.values.map(&:size) << 2).max
          blog.tags.each do |tag, articles|
        %>
          <li><%= link_to tag, tag_path(tag), nil, style: 'font-size: ' + (Rational(articles.size, max_count) * 200).to_i.to_s + '%;' %></li>
        <% end %>
      </ul>
    </aside>
  </div><!-- div#sub-column -->
</div><!-- div#body -->
<footer>
  <p class="pull-left">
    <a href="/?utm_source=mono&amp;utm_medium=footer" class="btn btn-default"><i class="fa fa-home"></i>Portal</a>
  </p>
  <p class="pull-right">
    <a href="/mono/feed.xml" class="btn btn-warning"><i class="fa fa-rss"></i>RSS</a>
  </p>
  <p class="text-center">&copy; youcune<br>営利目的の転載はお断りします</p>
</footer>
</body>
</html>
