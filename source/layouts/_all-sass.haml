  .card
    color: $body-color

  .card-title
    margin-top: 0

  .btn-xs
    @include button-size(2px, 4px, 12px, 14px, $btn-border-radius-sm)
    font-family: $font-family-sans-serif

  // -------------------------------------------------------------------
  // Reset
  // -------------------------------------------------------------------
  *
    box-sizing: border-box
    font-family: $font-family-serif

  h1, h2, h3, h4, h5, h6, p
    color: $body-color

  img
    vertical-align: middle

  // -------------------------------------------------------------------
  // Layout
  // -------------------------------------------------------------------
  .container
    max-width: 1110px
    margin: 0 auto

    > header
      margin: $spacer-lg 0

    > footer
      color: #55acee
      text-align: right

  // -------------------------------------------------------------------
  // Article
  // -------------------------------------------------------------------
  article
    max-width: 800px
    margin: 0 auto $spacer-lg

    img
      width: 100%
      height: auto

    > header
      margin-bottom: $spacer-lg

    > footer
      margin-top: $spacer-lg

  // -------------------------------------------------------------------
  // Type
  // -------------------------------------------------------------------
  a
    text-decoration: none
    color: $primary
    &:focus, &:hover, &:active
      text-decoration: underline

  time
    color: $gray-500
    font-size: $font-size-sm

