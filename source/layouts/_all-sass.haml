  // -----------------------------------------------------------------
  // Cards
  // -----------------------------------------------------------------
  .card
    color: $body-color

  .card-title
    margin-top: 0

  .card-columns
    @include media-breakpoint-only(md)
      column-count: 2
    @include media-breakpoint-only(sm)
      column-count: 2

  // -----------------------------------------------------------------
  // Buttons
  // -----------------------------------------------------------------
  .btn-xs
    @include button-size(2px, 4px, 12px, 14px, $btn-border-radius-sm)
    font-family: $font-family-sans-serif

  // -----------------------------------------------------------------
  // Reset
  // -----------------------------------------------------------------
  *
    box-sizing: border-box
    font-family: $font-family-serif

  h1, h2, h3, h4, h5, h6, p
    color: $body-color

  img
    vertical-align: middle

  // -----------------------------------------------------------------
  // Layout
  // -----------------------------------------------------------------
  .container
    max-width: 1110px
    margin: 0 auto

    > header
      margin: $spacer-lg 0

    > footer
      color: $gray-500
      font-size: $font-size-sm

  // -----------------------------------------------------------------
  // Article
  // -----------------------------------------------------------------
  article
    max-width: 800px
    margin: 0 auto $spacer-lg
    line-height: 1.732
    text-align: justify

    img
      width: 100%
      height: auto

    > header
      margin-bottom: $spacer-lg

      h1
        margin-bottom: 0

      p
        margin-top: 0

    > footer
      margin-top: $spacer-lg

  // -----------------------------------------------------------------
  // Type
  // -----------------------------------------------------------------
  a
    text-decoration: none
    color: $primary
    &:focus, &:hover, &:active
      text-decoration: underline

  .meta
    color: $gray-500
    font-size: $font-size-sm

    time
      margin-right: 0.5rem

  hr
    border: 0
    text-align: center
    margin: $spacer
    &:after
      content: '◆'
      display: inline-block
      color: $gray-400
      font-size: $font-size-sm

  // -----------------------------------------------------------------
  // Lists
  // -----------------------------------------------------------------
  .list-unstyled, .list-inline
    @include list-unstyled

  .list-inline > li
    display: inline-block

    &:not(:last-child)
      margin-right: $list-inline-padding

  // -----------------------------------------------------------------
  // Cards
  // -----------------------------------------------------------------
  .card-columns
    @include media-breakpoint-down(sm)
      column-count: 1

    @include media-breakpoint-only(md)
      column-count: 3
