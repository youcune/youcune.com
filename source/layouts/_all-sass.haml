:sass
  // -----------------------------------------------------------------
  // Variables
  // -----------------------------------------------------------------
  $enable-rounded: false
  $primary: #4CB55B
  $font-family-serif: Georgia,游明朝,"Yu Mincho",YuMincho,"Hiragino Mincho ProN",HGS明朝E,serif
  $spacer-lg: 4rem

  // ライトなGrid
  $grid-breakpoints: (sm: 0, md: 768px)
  $container-max-widths: (sm: 540px, md: 720px)
  $grid-columns: 6

  @import 'source/stylesheets/bootstrap/functions'
  @import 'source/stylesheets/bootstrap/variables'

  $theme-colors: ('primary': $primary, 'twitter': #1b95e0, 'hatena': #00a4de, 'facebook': #365899, 'github': #24292e)

  // -----------------------------------------------------------------
  // Bootstrap
  // -----------------------------------------------------------------
  @import 'source/stylesheets/bootstrap/mixins'
  //@import 'source/stylesheets/bootstrap/root'
  //@import 'source/stylesheets/bootstrap/reboot'
  //@import 'source/stylesheets/bootstrap/type'
  //@import 'source/stylesheets/bootstrap/images'
  @import 'source/stylesheets/bootstrap/code'
  @import 'source/stylesheets/bootstrap/grid'
  //@import 'source/stylesheets/bootstrap/tables'

  //
  // Basic Bootstrap table
  //

  table
    width: 100%
    max-width: 100%
    margin-bottom: $spacer
    background-color: $table-bg // Reset for nesting within parents with `background-color`.
    border: $table-border-width solid $table-border-color
    border-collapse: collapse

    th, td
      padding: $table-cell-padding
      vertical-align: top
      border-top: $table-border-width solid $table-border-color
      border: $table-border-width solid $table-border-color

    thead
      th
        vertical-align: bottom
        border-bottom: (2 * $table-border-width) solid $table-border-color

      th, td
        border-bottom-width: (2 * $table-border-width)

    @include media-breakpoint-down(sm)
      display: block
      width: 100%
      overflow-x: auto
      -webkit-overflow-scrolling: touch
      -ms-overflow-style: -ms-autohiding-scrollbar // See https://github.com/twbs/source/stylesheets/bootstrap/pull/10057

      // Prevent double border on horizontal scroll due to use of `display: block;`
      > .table-bordered
        border: 0

