:sass
  // -------------------------------------------------------------------
  // Variables
  // -------------------------------------------------------------------
  $enable-rounded: false
  $primary: #4CB55B
  $font-family-serif: Georgia,游明朝,"Yu Mincho",YuMincho,"Hiragino Mincho ProN",HGS明朝E,serif
  $spacer-lg: 4rem

  @import 'bootstrap/functions'
  @import 'bootstrap/variables'

  $theme-colors: ('primary': $primary, 'twitter': #1b95e0, 'hatena': #00a4de, 'facebook': #365899)

  // -------------------------------------------------------------------
  // Bootstrap
  // -------------------------------------------------------------------
  @import 'bootstrap/mixins'
