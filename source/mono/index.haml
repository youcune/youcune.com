---
pageable: true
per_page: 5
layout: mono
---
- page_articles.each_with_index do |article, i|
  %article
    %header
      %h2= link_to article.title, article
      %p
        = icon('clock-o', format_date(article.date))
        = icon('tag')
        = blog_tag_links(article.tags)
    = article.summary(250)
- if paginate
  %nav.text-center
    %ul.pagination
      - if prev_page
        %li= link_to '&laquo;', prev_page
      - ([page_number-2, 1].max .. [page_number+2, num_pages].min).each do |page|
        - if page == page_number
          %li.active= link_to(page, (page == 1 ? '/mono/' : "/mono/#{page}/"))
        - else
          %li= link_to(page, (page == 1 ? '/mono/' : "/mono/#{page}/"))
      - if next_page
        %li= link_to '&raquo;', next_page
