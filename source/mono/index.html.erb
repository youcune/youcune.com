---
pageable: true
per_page: 10
layout: mono
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <h2><%= link_to article.title, article %></h2>
      <p>
        <i class="fa fa-clock-o"></i><%= format_date article.date %>
        <i class="fa fa-tag"></i><%= blog_tag_links(article.tags) %>
      </p>
    </header>
    <%= article.summary(250) %>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
